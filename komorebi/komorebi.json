{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/master/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/.config/komorebi/applications.yaml",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "focus_follows_mouse": "Windows",
  "mouse_follows_focus": true,
  "default_workspace_padding": 10,
  "default_container_padding": 10,
  "active_window_border": true,
  "active_window_border_colours": {
    "single": { "r": 66, "g": 165, "b": 245 },
    "stack": { "r": 256, "g": 165, "b": 66 },
    "monocle": { "r": 255, "g": 51, "b": 153 }
  },
  "active_window_border_width": 15,
  "active_window_border_offset": 0,
  "monitors": [
    {
      "workspaces": [
        { "name": "I", "layout": "BSP" },
        { "name": "II", "layout": "VerticalStack" },
        { "name": "III", "layout": "HorizontalStack" },
        { "name": "IV", "layout": "UltrawideVerticalStack" }
      ]
    },
    {
      "workspaces": [
        {
          "name": "A",
          "layout": "BSP",
          "workspace_rules": [
            {
              "kind": "Title",
              "id": "Shared Content \\|.+\\| Microsoft Teams",
              "matching_strategy": "Regex"
            }
          ]
        },
        { "name": "B", "layout": "VerticalStack" },
        { "name": "C", "layout": "HorizontalStack" },
        {
          "name": "D",
          "layout": "UltrawideVerticalStack",
          "workspace_rules": [
            {
              "kind": "Exe",
              "id": "Spotify"
            }
          ]
        }
      ]
    }
  ],
  "manage_rules": [
    {
      "kind": "Exe",
      "id": "ConEmu64.exe"
    },
    {
      "kind": "Title",
      "id": "\\| Microsoft Teams",
      "matching_strategy": "Regex"
    }
  ]
}
